@page "/org/templates"
@inherits BaseAdminComponent<EventTemplatesViewModel>
@layout MainLayout

<PageTitle>@ViewModel.Title</PageTitle>

<div class="row mt-2">
    <div class="col">
        <h1>@ViewModel.Title</h1>
    </div>
    <div class="col text-end">
        <div class="btn-group">
            <a class="btn btn-primary" href="/org/templates/new">
                <i class="bi bi-plus-lg"></i>
                New Template
            </a>
        </div>
    </div>
</div>
<div class="row">
    <div class="col">
        <table class="table table-sm mt-2">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var template in ViewModel.PageList) {
                    <tr>
                        <td>@template.Id</td>
                        <td>@template.Info.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <div class="col">
        <ListViewPageBar ViewModel="@ViewModel" />
    </div>
</div>

